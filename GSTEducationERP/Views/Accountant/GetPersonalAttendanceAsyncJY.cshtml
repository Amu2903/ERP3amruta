            <script type="text/javascript">
                $(document).ready(function () {
                    $.noConflict();
                    var table = $('#example1').DataTable({
                        "responsive": true,
                        "lengthChange": false,
                        "autoWidth": false,
                        "buttons": [
                            {
                                extend: 'copy',
                                text: '<img src="/Content/Admin/icon/copy.png" title="Copy" alt="Copy" height="20" width="20" />',
                                titleAttr: 'Copy'
                            },
                            {
