@model GSTEducationERPLibrary.Accountant.Accountant

@{
    ViewBag.Title = "GetPersonalAttendanceAsyncJY";
    Layout = "~/Views/Shared/_LayoutERP.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
